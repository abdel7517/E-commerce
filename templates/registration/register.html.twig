{% block content %}
	<div class="center">



			{% for flashError in app.flashes('verify_email_error') %}
				<div class="alert alert-danger" role="alert">
					{{ flashError|trans }}
				</div>
			{% endfor %}
		{{ form_start(registrationForm, { "attr": { "class": "flex-column-center" } }) }}
			<div class="form-outline mb-4 w-50">
				<label class="form-label" for="form1Example2">Votre mail</label>
				{{ form_row(registrationForm.email, { "attr": {"id": "form1Example2", "class": "form-control" } } ) }}
			</div>

			<div class="form-outline mb-4 w-50">
				<label class="form-label" for="form1Example2">Mot de passe </label>
				{{ form_row(registrationForm.password.first, {
						'attr': { 'placeholder': 'Mot De Passe', "id": "form1Example2", "class": "form-control" }
					}) }}		
			</div>

			<div class="form-outline mb-4 w-50">
				<label class="form-label" for="form1Example2">Confirmez le mot de passe</label>
				{{ form_row(registrationForm.password.second, {
						'attr': { 'placeholder': 'Confirmez Mot De Passe', "id": "form1Example1", "class": "form-control" }
					}) }}		
			</div>

	
	
		{{ form_row(registrationForm.agreeTerms, { label: "J'accepte les CGU", 'attr':{}}) }}

		<button type="submit"  class="btn btn-primary btn-block"> S'inscrire </button>

				<a href=" {{ path('app_login') }} ">
				Déja un compte ?
				</a>

		{{ form_end(registrationForm) }}





