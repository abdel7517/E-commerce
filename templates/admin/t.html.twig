    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Page administrateur </h1>
                </div>
            </div>

           {% block content %}
            <div class="row">
                        <div class="col-sm-3">
                            <div class="hero-widget well well-sm">
                                <div class="icon">
                                    <i class="fas fa-cart-arrow-down"></i>
                                </div>
                                <div class="text">
                                    <span class="value">3</span>
                                    <label class="text-muted">Commandes non traitées</label>
                                </div>
                                <div class="options">
                                    <a href="javascript:;" class="btn btn-primary btn-lg"> Voir </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="hero-widget well well-sm">
                                <div class="icon">
                                    <i class="fas fa-user-tie"></i>
                                </div>
                                <div class="text">
                                    <span class="value">3</span>
                                    <label class="text-muted">Partenariat</label>
                                </div>
                                <div class="options">
                                    <a href="javascript:;" class="btn btn-default btn-lg"> Voir </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="hero-widget well well-sm">
                                <div class="icon">
                                    <img src=" {{ asset('img/surMesure.png') }} " id='img-surMesure' alt="" srcset="">

                                </div>
                                <div class="text">
                                    <span class="value">73</span>
                                    <label class="text-muted"> Projet sur mesure </label>
                                </div>
                                <div class="options">
                                    <a href="javascript:;" class="btn btn-default btn-lg"> Voir </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="hero-widget well well-sm">
                                <div class="icon">
                                    <img src=" {{asset('img/orders.png')}} " id='orders' alt="" srcset="">
                                </div>
                                <div class="text">
                                    <span class="value">75</span>
                                    <label class="text-muted">Toutes nos commandes</label>
                                </div>
                                <div class="options">
                                    <a href="javascript:;" class="btn btn-default btn-lg"> Voir </a>
                                </div>
                            </div>
                        </div>
                    </div>
                     <div class="panel-body">
                                    <div class="row">
                                            <div class="table-responsive">
                                                <table class="table table-bordered table-hover table-striped">
                                                    <thead>
                                                    <tr>
                                                        <th>Date</th>
                                                        <th>
                                                            code de commande
                                                        </th>
                                                        <th>status</th>
                                                        <th>email</th>
                                                        <th>nom du client </th>
                                                        <th>n° de voie</th>
                                                        <th>voie</th>
                                                        <th>code postal</th>
                                                        <th>pays</th>
                                                        <th>mode de recupération</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                   {% for order in orders %}
                                                        <tr>
                                                            <td>
									                            {{ order.date|date("d/m/Y") }}
                                                            <td>
                                                                {{ order.orderCode }}
                                                            </td>
                                                            <td>
                                                                {% if order.ready == true  %}
                                                                prête (client prévenue)
                                                                {% else %}
                                                                    en préparation
                                                                {% endif %}
                                                            </td>
                                                            <td>
                                                                {{ order.user.email }}
                                                            </td>
                                                            <td>
                                                                {{ order.name}}
                                                            </td>
                                                            <td>
                                                                {{order.numberAdress}}
                                                            </td>
                                                            <td>
                                                                {{order.nameAdress}}
                                                            </td>
                                                            <td>
                                                                {{order.postalCode}}
                                                            </td>
                                                            <td>
                                                                {{order.country}}
                                                            </td>
                                                            <td>
                                                                {{order.expedition}}
                                                            </td>
                                                            <td>
                                                                {% if order.ready != true %}
                                                                    <a href=" {{ path('admin_index', { 'orderCode': order.orderCode, 'date' : 'null', 'date_at': 'null' }) }} " class="btn btn-primary">
                                                                        Prévenir le client de la disponibilté de la commande
                                                                    </a>
                                                                {% else %}
                                                                    <p>
                                                                        Le client est prévenue que la commande est prête
                                                                    </p>
                                                                {% endif %}
                                                            </td>                                                    </tr>
                                                   {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                            <!-- /.table-responsive -->
                                        <!-- /.col-lg-4 (nested) -->
                                        <div class="col-lg-8">
                                            <div id="morris-bar-chart"></div>
                                        </div>
                                        <!-- /.col-lg-8 (nested) -->
                                    </div>
                                    <!-- /.row -->
                                </div>
           {% endblock %}

        </div>
    </div>

</div>
