{% block content %}

    <section class="contact">
        <p>Vous avez une question ? </p>
        <p> Vous avez un projet ? </p>
        <p> Une demande de devis ? </p>
        <p> N'hésitez pas à nous contacter ! </p>
        {% if send|default(false) == true  %}
            <p>Votre message à bien était envoyer</p>
            {% else %}
                <p>Votre message n'a pas était envoyer</p>
        {% endif %}
        <form  method="post" action=" {{ path("MyApp_postForm") }} ">
            <div class="back-form">
                <p>Vous êtes : </p>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="inlineCheckbox1" value="particulier" name="radio">
                    <label class="form-check-label" for="inlineCheckbox1">Un particulier</label>
                </div>
                <div class="form-check form-check-inline right-radio">
                    <input class="form-check-input" type="radio" id="inlineCheckbox2" value="professionnel" name="radio">
                    <label class="form-check-label" for="inlineCheckbox2">Un professionel</label>
                </div>
    
    
                    <div class="black label-name" id="">Nom /Prénom ou société : </div>
                    <input type="text" class="input-name" >
                <div>
                    <div class="flex">
                        <div class="container-input"> <div>Email :</div>
                            <input type="mail" class="input-mail">
                        </div>
                        <div class="container-input"> 
                            <div>Téléphone :</div> <input type="tel" class="input-phone"> </div>
                    </div>
                    <span>Message :</span>
                    <textarea></textarea>
                </div>
                <div class="container-submit">
                    <img src="asset/img/fond-form.png" alt="" class="icon-contact">
                    <button type="submit" class="submit-contact">Envoyer</button>
                    <img src="asset/img/fond-form.png" alt="" class="icon-contact">
                </div>
                
    
            </div>
        </form>
    </section>

{% endblock %}