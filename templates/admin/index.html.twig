{% extends "admin/baseAdmin.html.twig" %}
{% block banniere %}{% endblock %}
{% block content %}
	<br>
	<section class="order">
		{% set i = 1 %}
		{% for order in orders %}
			<div class='history'>
				<p>
					Commande n°
					{{ i }}
					datant du
					{{ order.date|date("d/m/y") }}
				</p>
				<table>
					<th>
						code de commande
					</th>
					<th>
						email
					</th>
					<th>
						nom
					</th>
					<th>
						n° de rue
					</th>
					<th>
						voie
					</th>
					<th>
						code postal
					</th>
					<th>
						pays
					</th>
					<th>
						récup.
					</th>
					<th>
						Produit
					</th>
					<th>
						Prix
					</th>
					<th>
						Quantité
					</th>
					<th>
						Total
					</th>

					<tbody>
						<tr>
							<td>
								{{ order.orderCode }}
							</td>
							<td>
								{{ order.user.email }}
							</td>
							<td>
								{{ order.name}}
							</td>
							<td>
								{{order.numberAdress}}
							</td>
							<td>
								{{order.nameAdress}}
							</td>
							<td>
								{{order.postalCode}}
							</td>
							<td>
								{{order.country}}
							</td>
							<td>
								{{order.expedition}}
							</td>
							{% for cart in order.cart %}

								<td>
									{{ cart.product.name}}
								</td>
								<td>
									{{cart.product.price}}
								</td>
								<td>
									{{cart.quantity}}
								</td>
								<td>
									{{cart.quantity * cart.product.price}}
								</td>
							</tr>
						{% endfor %}
						{% if order.expedition == 'livraison' %}
							<tr>
								<td>
									Livraison
								</td>
								<td>
									90€
								</td>
								<td>
									1
								</td>
								<td>
									90€
								</td>
							</tr>
						{% endif %}
					</tbody>
				</table>
			</div>
			{% set i = i + 1 %}
			<br>
		{% endfor %}
	</section>
{% endblock %}
